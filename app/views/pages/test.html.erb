<!-- Gallery -->
<!--
Gallery is linked to lightbox using data attributes.

To open lightbox, this is added to the gallery element: {data-toggle="modal" data-target="#exampleModal"}.

To open carousel on correct image, this is added to each image element: {data-target="#carouselExample" data-slide-to="0"}.
Replace '0' with corresponding slide number.
-->

<div class="slice slice-lg mt-8">
  <div class="container">
    <h1 class="text-center texthex" style="color: black;">Galerie Photo</h1>

    <div class="row" id="gallery2">
      <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
        <div class="image2" data-toggle="modal" data-target="#exampleModal">
          <%= image_tag("S1.JPG", :alt => "rss feed", :style => "width: 100%", :class => "w-100 shadow-1-strong rounded mb-4 mt-2 move-up", :options => { "data-toggle" => "modal", "data-target" => "#carouselExample"}, "data-slide-to" => "0"   ) %>

          <h2 class="over">Sport:</h2>
        </div>
        <div class="image2" data-toggle="modal" data-target="#largeModal">
          <%= image_tag("L1.JPG", :alt => "rss feed", :style => "width: 100%", :class => "w-100 shadow-1-strong rounded mb-4 mt-2 move-up", :options => { "data-toggle" => "modal", "data-target" => "#carouselExample"}, "data-slide-to" => "0"   ) %>

          <h2 class="over">Loisir:</h2>
        </div>
      </div>
       <div class="col-lg-4 mb-4 mb-lg-0">
        <div class="image2" data-toggle="modal" data-target="#cultureModal">
          <%= image_tag("C1.jpg", :alt => "rss feed", :style => "width: 100%; height: 400px", :class => "w-100 shadow-1-strong rounded mb-4 mt-2 move-up", :options => { "data-toggle" => "modal", "data-target" => "#culture"}, "data-slide-to" => "0"  ) %>
          <h2 class="over">Culture:</h2>
        </div>
        <div class="image2" data-toggle="modal" data-target="#decouveModal">
          <%= image_tag("D3,2.JPG", :alt => "rss feed", :style => "width: 100%", :class => "w-100 shadow-1-strong rounded mb-4 mt-2 move-up", :options => { "data-toggle" => "modal", "data-target" => "#decouve"}, "data-slide-to" => "0"  ) %>

          <h2 class="over">Découverte:</h2>
        </div>
      </div>

      <div class="col-lg-4 mb-4 mb-lg-0">
        <div class="image2" data-toggle="modal" data-target="#genModal">
          <%= image_tag("G3.JPG", :alt => "rss feed", :style => "width: 100%", :class => "w-100 shadow-1-strong rounded mb-4 mt-2 move-up", :options => { "data-toggle" => "modal", "data-target" => "#gen"}, "data-slide-to" => "0"  ) %>
          <h2 class="over">Général:</h2>
        </div>
       <!--  <div class="image2">
          <h2 class="over">Sorties Culturelles:</h2>
        </div> -->
      </div>
    </div>

  </div>

</div>


